<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.MainController">
    <Label text="Enter your name:"/>
    <TextField fx:id="nameField" promptText="Name"/>
    <Button text="Submit" onAction="#handleSubmit"/>
    <Label fx:id="greetingLabel"/>
</VBox>